<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplusVer1.AutorizPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo.png" />
            <StackLayout Margin="15">
                <Entry Placeholder="Логин" PlaceholderColor="Black" BackgroundColor="#E8E8E8" Margin="15"/>
                <Entry Placeholder="Пароль" IsPassword="True" PlaceholderColor="Black" BackgroundColor="#E8E8E8" Margin="15"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button x:Name="btn_Registr" Text="Зарегистрироваться" TextColor="White"  HorizontalOptions="Start" Clicked="btn_Registr_Clicked"/>
                <Button x:Name="btn_Entery" Text="Войти" TextColor="White"  HorizontalOptions="End"  Clicked="btn_Entery_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>