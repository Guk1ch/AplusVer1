<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplusVer1.Pages.RegistPage">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text = "Регистрация" Margin="0, 0, 75, 0" TextColor="White" HorizontalTextAlignment="Center" FontSize="Title"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
            <Entry Placeholder="Логин" PlaceholderColor="Black" BackgroundColor="#E8E8E8" Margin="15"/>
            <Entry Placeholder="E-mail" PlaceholderColor="Black" BackgroundColor="#E8E8E8" Margin="15"/>
            <Entry Placeholder="Пароль" IsPassword="True" PlaceholderColor="Black" BackgroundColor="#E8E8E8" Margin="15"/>
            <Entry Placeholder="Пароль" IsPassword="True" PlaceholderColor="Black" BackgroundColor="#E8E8E8" Margin="15"/>
            <Button x:Name="Btn_Registration" Text="Зарегистрироваться"  TextColor="White" HorizontalOptions="Center" WidthRequest="350" VerticalOptions="EndAndExpand"
                    Margin="0,0,0,50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>